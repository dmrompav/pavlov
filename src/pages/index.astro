---
import Header from '@/components/Header.astro';
import Preview from '@/components/Preview.astro';
import About from '@/components/About.astro';
import Competencies from '@/components/Competencies/Competencies.astro';
import Footer from '@/components/Footer.astro';
import Awards from '@/components/Awards.astro';
import Services from '@/components/Services/Services.astro';
import Contacts from '@/components/Contacts/Contacts.astro';
import { BASE } from '@/shared/constants/url';

import 'aos/dist/aos.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={BASE + "/favicon.svg"} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

		<title>Pavlov | Full-stack</title>
	</head>

	<body>
		<Header />
		<!-- <p>asdasdasd</p> -->
		<Preview />

		<main>
			<About />
			<Competencies />
			<Awards />
			<Services />
			<Contacts />
		</main>

		<Footer />
	</body>
</html>

<script>
import AOS from 'aos';

AOS.init();
</script>

<style is:global lang='scss'>
html {
	@apply bg-black;

	scroll-behavior: smooth;
}
body {
	font-family: "Roboto", sans-serif;
  font-style: normal;

	@apply
		font-400 text-gray-200
		text-sm sm:text-base md:text-lg lg:text-xl;
}

h3 {
	@apply
		font-semibold
		text-white
		mb-2 sm:mb-3 md:mb-4 lg:mb-8
		text-xl sm:text-2xl md:text-3xl lg:text-4xl;

}

section {
	@apply py-8;

	& p {
		@apply my-8;
	}
}

i[_i] {
	@apply inline-block;
	font-size: inherit;
}
</style>
